<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/nav_drawer_contents">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal|center"
        android:background="@color/topDrawSec">

        <ImageView
            android:src="@drawable/profile_pic"
            android:layout_width="@dimen/profileImageViewHeight"
            android:layout_height="@dimen/profileImageViewHeight" />

    </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:background="@color/bottomDrawSec"
      android:id="@+id/profile_rv"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </android.support.v7.widget.RecyclerView>


</LinearLayout>